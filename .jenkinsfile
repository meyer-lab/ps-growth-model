pipeline {
  agent any
  stages {
    stage('Clean') {
      steps {
        sh 'git clean -ffdx'
        sh 'make clean'
      }
    }
    stage('Build/Test') {
      parallel {
        stage('Build') { steps { sh 'make all -j 8' } }
        stage('Test')  { steps { sh 'make testcover' } }
        stage('Lint')  { steps { sh '(pylint3 --rcfile=.pylintrc grmodel > pylint.log || echo "pylint exited with $?")' } }
        stage('Doc')   { steps { sh 'make doc' } }
      }
    }
    stage('Report') {
      steps {
		cobertura coberturaReportFile: 'coverage.xml', failUnhealthy: false, failUnstable: false, maxNumberOfBuilds: 0, onlyStable: false, sourceEncoding: 'ASCII', zoomCoverageChart: false
		recordIssues qualityGates: [[threshold: 2, type: 'TOTAL_HIGH', unstable: true], [threshold: 36, type: 'TOTAL_NORMAL', unstable: true], [threshold: 88, type: 'TOTAL_LOW', unstable: true]], tools: [pyLint(pattern: 'pylint.log')]
        archiveArtifacts artifacts: 'Manuscript/Figures/*.pdf', onlyIfSuccessful: true
		publishHTML([allowMissing:false, alwaysLinkToLastBuild:false, keepAll:true,
          reportDir:'doc/build', reportFiles:'index.html', reportName:'Documentation', reportTitles:''])
      }
    }
  }
}
